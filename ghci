:set prompt "\ESC[32mÎ»> \ESC[m"
:set editor vim

let escapeShellArg arg = "\"" ++ arg ++ "\""
:def hoogle return . (":!hoogle --color --count 15 " ++) . escapeShellArg
:def doc return . (":!hoogle --info --color " ++) . escapeShellArg
:def pf return . (":!pointfree --verbose " ++) . escapeShellArg
