[alias]
  # status
  st = status --short --branch

  # add
  ap = add --patch

  # commit
  ci = commit -v
  amend    = commit -v --amend

  # branch
  br = branch
  brname = rev-parse --abbrev-ref HEAD

  # diff
  # ustaged
  d = !"git diff-index --quiet HEAD -- || clear; git diff --patch-with-stat"
  # staged
  dc = !"git d --cached"

  # log
  lg = log --graph --full-history --all --color --date=short --pretty=tformat:"%x1b[31m%h%x09%x1b[32m%ad%x1b[32m%d%x1b[0m%x20%s%x20%x1b[33m(%an)%x1b[0m"
  l = !git lg -n 20

  # checkout
  co = checkout

  # cherry-pick
  cp = cherry-pick -x

  # rebase
  rc = rebase --continue
  rs = rebase --skip
  rebase-origin = !git fetch origin && git rebase origin/master

  # reset
  unstage = reset HEAD
  uncommit = reset --soft HEAD^

  # push
  pc        = !git brname | xargs git push origin

  # merge
  unmerged  = !git ls-files --unmerged | cut -f2 | sort -u
  conflicts = !git ls-files --unmerged | cut -f2 | sort -u | xargs grep -El '<<<<<<<|=======|>>>>>>>'

  # Stats by commit author
  stats     = !git shortlog --summary | sort --reverse --numeric-sort

  # List of aliases
  aliases   = !git config -l | grep alias | cut -c 7-

  # Copy&paste helper
  git = !git
  ctags = "!sh -c '[ -f .git/hooks/ctags ] || git init; .git/hooks/ctags' git-ctags"

[core]
  editor = vim
  excludesfile = ~/.gitignore

[init]
  templatedir = ~/.git_template

[merge]
  tool = vimdiff
  ff = only
  # Show commits on merge
  log = true

[diff]
  # Use (i)ndex, (w)ork tree, (c)ommit and (o)bject
  # instead of a/b/c/d as prefixes for patches
  mnemonicprefix = true

[user]
  name = Aleksey Demidov
  email = aleksey.dem@gmail.com

[github]
  user = ademidov

[web]
  browser = open

[push]
  default = current

[color]
  diff   = true
  grep   = true
  status = true
  ui     = true

  [color "branch"]
    current = yellow reverse
    local   = yellow
    remote  = green

  [color "status"]
    added      = yellow
    changed    = green
    untracked  = cyan

  [color "diff"]
    meta       = magenta
    frag       = magenta bold
    old        = red bold
    new        = blue bold
    whitespace = red reverse

[url "git@github.com:"]
  insteadOf = gh:
